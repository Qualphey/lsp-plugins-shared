<?xml version="1.0"?>

<window ui:inject="PluginWindow">
	<!-- header new -->
	<vbox>
		<!-- v1-->
		<hbox height.min="44">
			<grid rows="3" cols="9">
				<cell width.min="106" rows="2" cols="1">
					<hbox>
						<multilabel padding.l="7">
							<label font.name="lsp-icons" font.size="38" font.antialias="true" text="K" color="#239db5"/>
							<label font.name="lsp-icons" font.size="38" font.antialias="true" text="L" color="#a4ed3b"/>
						</multilabel>
						<void expand="true"/>
					</hbox>
				</cell>
				<cell width.min="37" rows="2" cols="1"><void expand="true"/></cell>
				<void/>
				<cell rows="1" cols="6">
					<hbox>
						<void expand="true"/>
						<!-- plugin name -->
						<label color="#7d83a5" font.bold="true" padding.t="3" padding.b="1" padding.l="7" padding.r="7" halign="1" text="labels.rack.description" text.meta="true" text.adjust="toupper"/>
						<label color="#373944" text="|"/>
						<label color="#238093" font.bold="true" padding.t="3" padding.b="1" padding.l="7" padding.r="7" halign="1" text="labels.rack.acronym" text.meta="true" text.adjust="toupper"/>
						<!-- bypass icon -->
						<label ui:id="bypass" font.name="lsp-icons" padding.t="3" hover="true" color="dark_green" hover.color="dark_red" padding.l="7" padding.r="7" font.size="12" font.antialias="true" text="W" halign="1"/>
					</hbox>
				</cell>
				<bevel expand="true" color="bg_box" width.min="20" height.min="20" halign="-1"/>
				<!-- menu box -->

					<hbox halign="1">
						<void expand="true"/>
						<multilabel bg.color="bg" padding.l="7" hover="true" hover.color="menu_icon">
							<label  font.name="lsp-icons" padding.t="4" color="menu_icon" font.antialias="true" text="T" halign="1" />
							<label  color="fg2" padding.t="4" padding.l="3" padding.r="10" halign="1" text="MENU"/>
						</multilabel>
						<multilabel bg.color="bg" padding.l="7" hover="true" hover.color="menu_icon">
							<label  font.name="lsp-icons" padding.t="4" color="menu_icon" font.antialias="true" text="S" halign="1" />
							<label  color="fg2" padding.t="4" padding.l="3" padding.r="10" halign="1" text="SAVE"/>
						</multilabel>
						<multilabel bg.color="bg" padding.l="7" hover="true" hover.color="menu_icon">
							<label  font.name="lsp-icons" padding.t="4" color="menu_icon" font.antialias="true" text="R" halign="1" />
							<label  color="fg2" padding.t="4" padding.l="3" padding.r="10" halign="1" text="LOAD"/>
						</multilabel>
						<multilabel bg.color="bg" padding.l="7" hover="true" hover.color="menu_icon">
							<label  font.name="lsp-icons" padding.t="4" color="menu_icon" font.antialias="true" text="X" halign="1" />
							<label  color="fg2" padding.t="4" padding.l="3" padding.r="10" halign="1" text="RESET"/>
						</multilabel>
						<multilabel bg.color="bg" padding.l="7" hover="true" hover.color="menu_icon">
							<label  font.name="lsp-icons" padding.t="4" color="menu_icon" font.antialias="true" text="P" halign="1" />
							<label  color="fg2" padding.t="4" padding.l="3" padding.r="10" halign="1" text="ABOUT"/>
						</multilabel>

				</hbox>

			</grid>

		</hbox>
		<void height.min="4" fill="true"/>
		<!-- old -->

		<grid ui:inject="PluginWindow::Grid" rows="2" cols="4">

			<cell cols="4" visibility=":_ui_mount_stud ieq 0">
				<rack ui:id="rack_top" ui:inject="PluginWindow::RackEarTop" text="labels.rack.top" text.meta="true" angle="1"/>
			</cell>

			<rack ui:id="rack_left" ui:inject="PluginWindow::RackEarSide" visibility=":_ui_mount_stud ieq 1" text="labels.rack.left" text.meta="true" angle="2"/>

			<vbox ui:inject="PluginWindow::Bypass::Box" visibility="ex :bypass">
				<multilabel>
					<label font.name="lsp-icons" font.size="32" font.antialias="true" text="A" color="#239db5"/>
					<label font.name="lsp-icons" font.size="32" font.antialias="true" text="B" color="#a4ed3b"/>
				</multilabel>
				<label ui:inject="PluginWindow::Bypass::Label" text="labels.bypass"/>
				<switch ui:inject="PluginWindow::Bypass::Switch" id="bypass"/>
				<led ui:inject="PluginWindow::Bypass::Led" id="bypass"/>
			</vbox>

			<hbox ui:inject="PluginWindow::Content" ui:id="plugin_content"></hbox>

			<rack ui:id="rack_right" ui:inject="PluginWindow::RackEarSide" text="labels.rack.right" text.meta="true" visibility=":_ui_mount_stud ieq 1" angle="2"/>

		</grid>
		<!-- Footer -->

		<void height.min="4" fill="true"/>
		<hbox height.min="20" bg.color="bg_box">
			<!-- scale icons +- -->
			<hbox padding.t="3" halign="1" padding.l="7">
				<label font.name="lsp-icons" color="fg" padding.r="10" font.size="16" font.antialias="true" text="Y"/>
				<label id="scale_minus" font.name="lsp-icons" hover="true" color="menu_icon" hover.color="fg2" padding.r="5" expand="false" font.size="8" font.antialias="true" text="V"/>
				<label id="scale_plus" font.name="lsp-icons" hover="true" color="menu_icon" hover.color="fg2" padding.r="5" expand="false" font.size="8" font.antialias="true" text="U"/>
			</hbox>
			<!-- text scale icons +- -->
			<hbox padding.t="3" halign="1" padding.l="7">
				<label font.name="lsp-icons" color="fg" padding.r="10" font.size="16" font.antialias="true" text="Z"/>
				<label id="scale_minus" font.name="lsp-icons" hover="true" color="menu_icon" hover.color="fg2" padding.r="5" expand="false" font.size="8" font.antialias="true" text="V"/>
				<label id="text_scale_plus" font.name="lsp-icons" hover="true" color="menu_icon" hover.color="fg2" padding.r="5" expand="false" font.size="8" font.antialias="true" text="U"/>
			</hbox>
			<void expand="true"/>
			<!-- help icon -->
			<label id="help" font.name="lsp-icons" padding.t="3" hover="true" color="menu_icon" hover.color="fg2" padding.r="7" font.size="16" font.antialias="true" text="Q" halign="1"/>

		</hbox>
	</vbox>
</window>

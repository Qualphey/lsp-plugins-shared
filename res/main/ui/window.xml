<!-- plugin-content -->
			<hbox ui:inject="PluginWindow::Content" ui:id="plugin_content"></hbox>
<!-- rack2
			<rack ui:id="rack_right" ui:inject="PluginWindow::RackEarSide" text="labels.rack.right" text.meta="true" visibility=":_ui_mount_stud ieq 1" angle="2"/>

		</grid>
	-->

		<!-- Footer -->

		<void height.min="4" fill="true"/>
		<hbox height="20" bg.color="bg_box">
			<!-- scale icons +- -->
			<hbox halign="1" padding.l="6" padding.r="3" solid="true">
				<label font.name="lsp-icons" hover="true" color="footer_icon" hover.color="footer_icon_hover" padding.r="10" font.size="12" font.antialias="true" text="7"/>
				<label id="scale_minus" font.name="lsp-icons" hover="true" color="footer_icon_rsz" hover.color="footer_icon_rsz_hover" padding.r="5" expand="false" font.size="8" font.antialias="true" text="B"/>
				<label id="scale_plus" font.name="lsp-icons" hover="true" color="footer_icon_rsz" hover.color="footer_icon_rsz_hover" padding.r="5" expand="false" font.size="8" font.antialias="true" text="C"/>
			</hbox>
			<!-- text scale icons +- -->
			<hbox halign="1" padding.l="6" solid="true">
				<label font.name="lsp-icons" hover="true" color="footer_icon" hover.color="footer_icon_hover" padding.r="10" font.size="12" font.antialias="true" text="D"/>
				<label id="scale_minus" font.name="lsp-icons" hover="true" color="footer_icon_rsz" hover.color="footer_icon_rsz_hover" padding.r="5" expand="false" font.size="8" font.antialias="true" text="B"/>
				<label id="text_scale_plus" font.name="lsp-icons" hover="true" color="footer_icon_rsz" hover.color="footer_icon_rsz_hover" padding.r="5" expand="false" font.size="8" font.antialias="true" text="C"/>
			</hbox>
			<void expand="true"/>
			<!-- help icon -->
			<label id="help" font.name="lsp-icons" hover="true" color="footer_icon_rsz" hover.color="menu_icon_hover" padding.r="6" font.size="12" font.antialias="true" text="6" halign="1"/>

		</hbox>
	</vbox>
</window>

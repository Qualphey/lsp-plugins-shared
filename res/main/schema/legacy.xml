<?xml version="1.0" encoding="UTF-8" ?>

<schema>
	<!-- Metadata -->
	<meta>
		<title value="schemas.legacy"/>
	</meta>

	<!-- Fonts -->
	<fonts>
		<lsp-logo src="builtin://fonts/lsp-logo.ttf"/>
		<lsp-icons src="builtin://fonts/lsp-icons.ttf"/>
		<noto-sans src="builtin://fonts/noto-sans-light.ttf"/>
		<noto-sans-condensed src="builtin://fonts/noto-sans-condensed-light.ttf"/>
		<noto-sans-display src="builtin://fonts/NotoSansDisplay-Regular.ttf"/>
	</fonts>

	<!-- Color aliases -->
	<colors>
		<!-- Generic colors -->
		<black value="#000000"/>
		<white value="#ffffff"/>

		<red value="#ff0000"/>
		<orange value="#ff8800"/>
		<yellow value="#ffff00"/>
		<green value="#00ff00"/>
		<cyan value="#00ffff"/>
		<blue value="#0000ff"/>
		<violet value="#802aff"/>
		<magenta value="#aa00ff"/>
		<gray value="#888888"/>

		<bright_red value="#ff6262"/>
		<bright_orange value="#ffcc62"/>
		<bright_yellow value="#ffff62"/>
		<bright_green value="#7cff7c"/>
		<bright_cyan value="#7cffff"/>
		<bright_blue value="#2d2dff"/>
		<bright_violet value="#b92dff"/>
		<bright_magenta value="#ff62ff"/>
		<bright_gray value="#cccccc"/>

		<dark_red value="#d20000"/>
		<dark_orange value="#d28800"/>
		<dark_yellow value="#d2d200"/>
		<dark_green value="#00d200"/>
		<dark_cyan value="#00d2d2"/>
		<dark_blue value="#0000d2"/>
		<dark_violet value="#8800d2"/>
		<dark_magenta value="#d200d2"/>
		<dark_gray value="#444444"/>

		<!-- Main colors -->
		<bg value="#1b1c22"/>
		<bg_name value="#ebecee"/>
		<bg_light value="#25272e"/>
		<bg_schema value="#1b1c22"/>
		<border_color value="#373943"/>
		<text_prim value="#ebecee"/>
		<text_sec value="#cacbcd"/>
		<lsp_logo value="#00b1eb"/>
		<lsp_logo_cover value="#00e2ff"/>
		<menu_text value="#aaabac"/>
		<menu_text_hover value="#ebecee"/>
		<menu_icon value="#0082ac"/>
		<menu_icon_hover value="#00b1eb"/>
		<footer_icon value="#909191"/>
		<footer_icon_hover value="#ebecee"/>
		<footer_icon_rsz value="#0082ac"/>
		<footer_icon_rsz_hover value="#00b1eb"/>
		<plug_name value="#ebecee"/>
		<plug_name_sep value="#aaabac"/>
		<plug_name_acr value="#00b1eb"/>

		<!-- Separator -->
		<sep_hover_legacy value="#ebecee"/>

		<!-- Knob -->
		<kscale value="#00c0ff"/>
		<kcap value="#474843"/>

		<!-- Led -->
		<led_cred value="#880000"/>
		<led_lred value="#ff0000"/>
		<led_c value="#008800"/>
		<led_l value="#00cc00"/>
		<PD1 value="#ff0000"/>
		<PD1_led value="#ff0000"/>
		<PD1_hole value="#000000"/>

		<!-- Indicator -->
		<ind_col value="#101010"/>
		<ind_text value="#00ff00"/>

		<!-- Hyperlinks -->
		<hl_text value="#1a7788"/>
		<hl_hover value="#83ba2d"/>
		<hl_sel value="#57b2a5"/>
		<hl_border value="#1a7788"/>

		<!-- Hover -->
		<hv_text value="#a8aed3"/>
		<hv_border value="#239db5"/>
		<hv_fill value="#264652"/>

		<!-- Misc -->
		<activity value="#40424e"/>
		<warn value="#ffff00"/>

		<!-- Graph -->
		<bg_graph value="#1f2025"/>
		<mesh_graph value="#00c0ff"/>
		<graph_prim value="#989898"/>
		<graph_sec value="#858585"/>
		<graph_alt value="#737373"/>

		<!-- Group -->
		<text_group value="#1b1c22"/>

	</colors>

	<!-- Root style -->
	<root>
		<size.scaling value="1.0"/>
		<lang value="en_US"/>
		<bg.color value="bg"/>
		<font.name value="noto-sans-display"/>
		<font.antialiasing value="true"/>
		<font.size value="12.0"/>
	</root>

	<!-- Windows -->
	<style class="Window" parents="root"></style>

	<style class="FileDialog" parents="Window"></style>

	<style class="MessageBox" parents="Window"></style>

	<style class="PopupWindow" parents="Window"></style>

	<style class="Menu::Window" parents="Window"></style>

	<!-- Simple widgets -->
	<style class="Align" parents="root">
		<bg.inherit value="true"/>
	</style>

	<style class="Box" parents="root">
		<bg.inherit value="true"/>
	</style>

	<style class="Void" parents="root">
		<bg.inherit value="true"/>
	</style>

	<style class="Button" parents="root">
		<border.size value="3"/>
		<gradient value="true"/>
		<hole value="true"/>
		<hover value="false"/>
		<text.shift value="-1 -1"/>
		<text.down.shift value="0 0"/>
		<text.pressed.shift value="1 1"/>
		<bg.inherit value="false"/>
		<border.color value="gray"/>
		<border.hover.color value="bright_gray"/>
		<color value="gray"/>
		<hover.color value="white"/>
		<text.color value="black"/>
		<text.hover.color value="black"/>
	</style>

	<style class="CheckBox" parents="root">
		<border.size value="1"/>
		<border.gap.size value="0"/>
		<border.radius value="0"/>
		<check.radius value="0"/>
		<check.gap.size value="2"/>

		<border.color value="border_color"/>
		<border.hover.color value="activity"/>
		<fill.color value="bg_light"/>
		<fill.hover.color value="bg_light"/>
		<color value="text_prim"/>
		<hover.color value="text_sec"/>
	</style>

	<style class="ComboBox" parents="root">
		<border.size value="1"/>
		<border.gap.size value="2"/>
		<border.radius value="0"/>

		<color value="bg_light"/>
		<text.color value="text_prim"/>
		<spin.color value="bg_light"/>
		<spin.text.color value="text_sec"/>
		<border.color value="border_color"/>
		<border.gap.color value="bg_light"/>
	</style>

	<style class="ComboBox::List" parents="root">
		<border.size value="1"/>
		<border.gap.size value="2"/>
		<border.radius value="0"/>

		<list.bg.color value="bg"/>
		<border.color value="border_color"/>
	</style>

	<style class="Edit" parents="root">
		<border.size value="1"/>
		<border.gap.size value="2"/>
		<border.radius value="0"/>

		<color value="bg_light"/>
		<text.color value="text_sec"/>
		<cursor.color value="text_sec"/>
		<border.color value="border_color"/>
		<border.gap.color value="bg_light"/>
	</style>

	<style class="Graph" parents="root">
		<glass.visibility value="true"/>
		<border.color value="bg_name"/>
		<border.size value="2"/>
		<border.radius value="10"/>
		<color value="black"/>
		<bg.inherit value="false"/>
		<text.radius value="0"/>
		<border.flat value="true"/>
	</style>

	<style class="GraphAxis" parents="root">
		<smooth value="false"/>
		<color value="graph_sec"/>
	</style>

	<style class="GraphMarker" parents="root">
		<smooth value="false"/>
	</style>

	<style class="GraphMesh" parents="root">
		<smooth value="true"/>
		<color value="cyan"/>
	</style>

	<style class="GraphOrigin" parents="root">
		<radius value="2"/>
		<smooth value="true"/>
	</style>

	<style class="GraphText" parents="root">
		<padding value="2"/>
	</style>

	<style class="Grid" parents="root">
		<bg.inherit value="true"/>
	</style>

	<style class="Cell" parents="root">
		<bg.inherit value="true"/>
	</style>

	<style class="Group" parents="root">
		<color value="bg_name"/>
		<border.size value="2"/>
		<text.color value="text_group"/>
		<text.radius value="10"/>
		<ipadding value="12"/>
		<padding value="0"/>
		<border.radius value="10"/>
		<bg.color value="bg"/>
		<heading value="-1 0"/>
		<text.padding.left value="6"/>
	</style>

	<style class="GraphGroup" parents="Group">
		<color value="bg"/>
		<bg.color value="bg"/>
		<border.size value="0"/>
		<text.color value="text_sec"/>
		<text.radius value="0"/>
		<border.radius value="0"/>
		<text.padding.left value="2"/>
	</style>

	<style class="Hyperlink" parents="root">
		<text.color value="hl_text"/>
		<text.hover.color value="hl_hover"/>
	</style>

	<style class="Indicator" parents="root">
		<color value="ind_col"/>
		<text.color value="ind_text"/>
		<modern value="false"/>
		<text.dark value="true"/>
		<bg.inherit value="false"/>
	</style>

	<style class="Knob" parents="root">
		<color value="kcap"/>
		<scale.color value="kscale"/>
		<tip.color value="bg_name"/>
		<size.range.min value="24"/>
		<size.range.max value="24"/>
		<scale.size value="5"/>
		<bg.inherit value="true"/>
		<flat value="false"/>
		<gap.size value="2"/>
		<hole.size value="1"/>
		<hole.color value="black"/>
		<scale.marks value="true"/>
	</style>

	<style class="Label" parents="root">
		<text.color value="text_sec"/>
		<allocation.hfill value="false"/>
		<allocation.vfill value="false"/>
		<bg.inherit value="true"/>
	</style>

	<style class="MultiLabel" parents="root">
		<bg.inherit value="true"/>
	</style>

	<style class="Led" parents="root">
		<color value="led_c"/>
		<led.color value="led_l"/>
		<size value="8"/>
		<bg.inherit value="true"/>

	</style>

	<style class="ListBox" parents="root">
		<border.size value="1"/>
		<border.gap.size value="2"/>
		<border.radius value="0"/>

		<list.bg.color value="bg_light"/>
		<border.color value="border_color"/>
	</style>

	<style class="ListBoxItem" parents="root">
		<padding.top value="4"/>
		<padding.bottom value="4"/>

		<bg.color value="bg_light"/>
		<bg.selected.color value="border_color"/>
		<text.color value="text_sec"/>
		<text.selected.color value="text_sec"/>
	</style>

	<style class="Menu" parents="root">
		<border.size value="1"/>
		<ipadding.top value="4"/>
		<ipadding.bottom value="4"/>

		<border.color value="border_color"/>
		<bg.color value="bg_light"/>
	</style>

	<style class="MenuItem" parents="root">
		<bg.selected.color value="bg"/>
		<text.color value="text_sec"/>
		<text.selected.color value="text_prim"/>
	</style>

	<style class="RackEars" parents="root"></style>

	<style class="ScrollBar" parents="root">
		<border.size value="1"/>
		<border.gap.size value="1"/>
		<border.radius value="0"/>
		<size.constraints.width.min value="16"/>
		<size.constraints.height.min value="16"/>

		<border.color value="border_color"/>
		<inc.color value="bg"/>
		<inc.active.color value="activity"/>
		<dec.color value="bg"/>
		<dec.active.color value="activity"/>
		<button.color value="bg_light"/>
		<button.active.color value="activity"/>
		<slider.color value="border_color"/>
		<slider.border.color value="border_color"/>
		<slider.active.color value="activity"/>
		<border.gap.color value="bg"/>
		<text.color value="text_prim"/>
		<text.active.color value="bg_light"/>
	</style>

	<style class="Separator" parents="root">
		<color value="border_color"/>
	</style>

	<style class="Switch" parents="root"></style>

	<!-- FileDialog widgets -->
	<style class="FileDialog::Bookmark" parents="Hyperlink"></style>

	<style class="FileDialog::Bookmark.selected" parents="FileDialog::Bookmark">
		<text.color value="hl_sel"/>
		<bg.color value="bg_light"/>
	</style>

	<style class="FileDialog::Warning" parents="root">
		<text.color value="warn"/>
	</style>

	<style class="FileDialog::ActionButton" parents="Button"></style>

	<style class="FileDialog::NavButton" parents="Button"></style>

	<style class="FileDialog::ActionAlign" parents="Align">
		<layout.hscale value="0.0"/>
		<layout.halign value="1.0"/>
	</style>

	<style class="FileDialog::ActionBox" parents="Box">
		<spacing value="4"/>
	</style>

	<style class="FileDialog::NavBox" parents="Box">
		<spacing value="2"/>
	</style>

	<style class="FileDialog::ExtCheck" parents="CheckBox">
		<color value="text_prim"/>
	</style>

	<!-- Separator Header -->
	<style class="PluginWindow::Hsep_header" parents="Separator">
		<color value="sep_hover_legacy"/>
		<visible value="true"/>
		<thickness value="2"/>
	</style>

	<!-- MessageBox widgets -->
	<style class="MessageBox::Message" parents="Label"></style>

	<style class="MessageBox::Heading" parents="Label"></style>

	<style class="MessageBox::Button" parents="Button"></style>

	<!-- Additional styles for value -->
	<style class="Value::PopupWindow" parents="PopupWindow">
		<padding value="2"/>
	</style>

	<style class="Value::PopupWindow::Box" parents="Box">
		<orientation value="horizontal"/>
		<spacing value="2"/>
	</style>

	<style class="Value::PopupWindow::Input" parents="Edit">
		<spacing value="2"/>
		<size.constraints.width.min value="64"/>
	</style>

	<style class="Value::PopupWindow::ValidInput" parents="Value::PopupWindow::Input"></style>

	<style class="Value::PopupWindow::InvalidInput" parents="Value::PopupWindow::Input">
		<text.color value="bright_red"/>
	</style>

	<style class="Value::PopupWindow::MismatchInput" parents="Value::PopupWindow::Input">
		<text.color value="bright_yellow"/>
	</style>

	<style class="Value::PopupWindow::Apply" parents="Button"></style>

	<style class="Value::PopupWindow::Cancel" parents="Button"></style>

	<!-- GreetingDialog widgets -->
	<style class="GreetingDialog" parents="Window">
		<padding value="16"/>
	</style>

	<style class="GreetingDialog::Text" parents="Label">
		<allocation.hfill value="true"/>
		<allocation.vfill value="true"/>
		<text.layout.halign value="-1.0"/>
	</style>

	<style class="GreetingDialog::Heading" parents="Label">
		<allocation.hfill value="true"/>
		<allocation.vfill value="true"/>
		<text.layout.halign value="-1.0"/>
		<font.size value="24"/>
		<font.bold value="true"/>
	</style>

	<style class="GreetingDialog::Postscript" parents="Label">
		<allocation.hfill value="true"/>
		<allocation.vfill value="true"/>
		<text.layout.halign value="1.0"/>
	</style>

	<style class="GreetingDialog::Hlink" parents="Hyperlink">
		<allocation.hfill value="true"/>
		<allocation.vfill value="true"/>
		<text.layout.halign value="-1.0"/>
		<padding.left value="24"/>
	</style>

	<style class="GreetingDialog::PostscriptHlink" parents="Hyperlink">
		<allocation.hfill value="true"/>
		<allocation.vfill value="true"/>
		<text.layout.halign value="1.0"/>
	</style>

	<!-- PluginWindow widgets -->
	<style class="PluginWindow" parents="Window">
		<allocation.hfill value="true"/>
		<allocation.vfill value="true"/>
		<text.layout.halign value="1.0"/>
		<padding value="4"/>
	</style>

	<style class="PluginWindow::RackEarTop" parents="RackEars">
		<font.size value="12"/>
	</style>

	<style class="PluginWindow::RackEarSide" parents="RackEars">
		<font.size value="16"/>
	</style>

	<style class="PluginWindow::Bypass::Box" parents="Box">
		<padding value="4"/>
		<allocation.hfill value="false"/>
		<allocation.vfill value="false"/>
	</style>

	<style class="PluginWindow::Bypass::Switch" parents="Switch">
		<angle value="1"/>
		<size.range value="24"/>
	</style>

	<style class="PluginWindow::Bypass::Led" parents="Led">
		<color value="led_cred"/>
		<led.color value="led_lred"/>
		<size value="8"/>
	</style>

	<style class="PluginWindow::Bypass::Button" parents="Button">
		<down.colors value="true"/>
		<color value="bg"/>
		<down.color value="bg"/>
		<hover.color value="bg"/>
		<down.hover.color value="bg"/>
		<text.color value="green"/>
		<text.hover.color value="dark_green"/>
		<text.down.color value="red"/>
		<text.down.hover.color value="dark_red"/>
		<border.size value="0"/>
		<border.down.size value="0"/>
		<border.pressed.size value="0"/>
		<hole value="false"/>
		<hover value="true"/>
		<padding.top value="1"/>
		<padding.right value="3"/>
		<gradient value="false"/>
		<text.shift value="0 0"/>
		<font.name value="lsp-icons"/>
		<font.size value="12"/>
		<font.antialias value="true"/>
	</style>

	<style class="PluginWindow::Content" parents="Box">
		<allocation.hfill value="true"/>
		<allocation.vfill value="true"/>
		<allocation.hexpand value="true"/>
		<allocation.vexpand value="true"/>
		<padding value="0"/>
	</style>

</schema>
